RewriteEngine On
RewriteBase /everythingeasy.in/

# --- Do NOT rewrite CSS/JS/Images ---
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|webp|ico)$ [NC]
RewriteRule .* - [L]

# --- Do NOT rewrite assets folder ---
RewriteCond %{REQUEST_URI} ^/everythingeasy.in/assets/ [NC]
RewriteRule .* - [L]

# --- Pretty URL for it-services ---
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^it-services/([^/]+)/?$ /everythingeasy.in/it-services.php?slug=$1 [L,QSA]
