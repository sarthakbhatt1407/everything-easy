###################################

<IfModule mod_rewrite.c>
RewriteEngine On

# Do NOT rewrite assets
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|svg|webp|ico|pdf)$ [NC]
RewriteRule .* - [L]

# Do NOT rewrite existing files
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule .* - [L]

# Do NOT rewrite existing directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]

# Only rewrite URLs inside /it-services/
# /it-services/web-development â†’ /it-services/web-development.php
RewriteRule ^it-services/([^/]+)/?$ it-services/$1.php [L,QSA]
</IfModule>
