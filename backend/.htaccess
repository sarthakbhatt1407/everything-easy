RewriteEngine On

# -----------------------------
# 1. Do NOT rewrite CSS/JS/Images
# -----------------------------
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|webp|ico|pdf)$ [NC]
RewriteRule .* - [L]

# -----------------------------
# 2. Do NOT rewrite /assets/
# -----------------------------
RewriteCond %{REQUEST_URI} ^/assets/ [NC]
RewriteRule .* - [L]

# -----------------------------
# 3. If file or folder exists â†’ NO rewrite
# -----------------------------
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule .* - [L]

RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]

# --------------------------------------------------
# 4. Rewrite ONLY URLs starting with /it-services/
# URL: /it-services/web-development
# Opens: /it-services.php?slug=web-development
# --------------------------------------------------
RewriteRule ^it-services/([^/]+)/?$ it-services.php?slug=$1 [L,QSA]
