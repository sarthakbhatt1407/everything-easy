RewriteEngine On

# Do NOT rewrite static files
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|svg|webp|ico|pdf)$ [NC]
RewriteRule .* - [L]

# Do NOT rewrite existing files
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule .* - [L]

# Do NOT rewrite existing folders
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]

# âœ… Route all slugs to it-services.php
RewriteRule ^it-services/([^/]+)/?$ /it-services.php?slug=$1 [L,QSA]
