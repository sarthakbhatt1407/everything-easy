RewriteEngine On

# ---- FIX: Never rewrite CSS / JS / Images ----
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|webp|ico)$ [NC]
RewriteRule .* - [L]

# ---- Fix: Never rewrite assets folder ----
RewriteCond %{REQUEST_URI} ^assets/ [NC]
RewriteRule .* - [L]

# ---- Rewrite HTML page with slug ----
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^it-services/([^/]+)/?$ it-services.html?slug=$1 [L,QSA]
